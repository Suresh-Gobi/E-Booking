@model IEnumerable<ebookings.Models.Order>

   @{
       ViewData["Title"] = "All Orders";
   }

   <h2>All Orders</h2>

   <table class="table table-striped">
       <thead>
           <tr>
               <th>Order ID</th>
               <th>User ID</th>
               <th>Full Name</th>
               <th>Address</th>
               <th>Email</th>
               <th>Phone Number</th>
               <th>Status</th>
               <th>Items</th>
           </tr>
       </thead>
       <tbody>
           @foreach (var order in Model)
           {
               <tr>
                   <td>@order.Id</td>
                   <td>@order.UserId</td>
                   <td>@order.FullName</td>
                   <td>@order.Address</td>
                   <td>@order.Email</td>
                   <td>@order.PhoneNumber</td>
                   <td>@order.Status</td>
                   <td>
                       <ul>
                           @foreach (var item in order.Items)
                           {
                               <li>@item.Book.Title</li>
                           }
                       </ul>
                   </td>
               </tr>
           }
       </tbody>
   </table>