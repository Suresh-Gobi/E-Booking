@{
    ViewData["Title"] = "Generate Report";
}
<br/>
<h4>Report</h4>
<hr/>
<div class="row">
    <!-- Total Books Card -->
    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Total Books</h5>
                <p class="card-text">@ViewBag.TotalBooks</p>
            </div>
        </div>
    </div>

    <!-- Total Orders Card -->
    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Total Orders</h5>
                <p class="card-text">@ViewBag.TotalOrders</p>
            </div>
        </div>
    </div>

    <!-- Total Users Card -->
    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Total Users</h5>
                <p class="card-text">@ViewBag.TotalUsers</p>
            </div>
        </div>
    </div>

    <!-- Total Revenue Card -->
    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Total Revenue</h5>
                <p class="card-text">$1000</p> <!-- Static data, replace with actual total revenue -->
            </div>
        </div>
    </div>
</div>

<div class="row mt-3">
    <div class="col-md-6">
        <canvas id="totalChart" width="400" height="200"></canvas>
    </div>
    <div class="col-md-6">
        <canvas id="lineChart" width="400" height="200"></canvas>
    </div>
</div>

<div class="mt-5">
    <h4>Profitable Order Details</h4>
    <hr />
    @if (ViewBag.OrderDetails != null && ViewBag.OrderDetails.Count > 0)
    {
        <div class="table-responsive">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Order ID</th>
                        <th>Customer Name</th>
                        <th>Total Price</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in ViewBag.OrderDetails)
                    {
                        <tr>
                            <td>@order.Id</td>
                            <td>@order.CustomerName</td>
                            <td>$@order.TotalPrice</td>
                            <td>@order.Status</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <p>No order details available.</p>
    }
</div>



<div class="mt-3">
    <button class="btn btn-primary" id="downloadBtn">Download Report PDF</button>
</div>

@section Scripts {
<script src="https://cdnjs.cloudflare.com/ajax/libs/html2canvas/0.4.1/html2canvas.min.js"></script>



    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.7.0/chart.min.js"></script>

       <script>
        document.getElementById('downloadBtn').addEventListener('click', function () {
            // Capture the screenshot of the report
            html2canvas(document.body, {
                scrollX: 0,
                scrollY: 0,
                windowWidth: document.body.scrollWidth,
                windowHeight: document.body.scrollHeight,
                x: 0,
                y: 0,
                width: document.body.clientWidth,
                height: document.body.clientHeight,
                useCORS: true, // Enable CORS for cross-origin images
                allowTaint: true, // Allow taint on the canvas
                logging: true, // Enable logging for debugging
                scale: window.devicePixelRatio, // Use device pixel ratio for high-resolution image
            }).then(function (canvas) {
                // Convert the canvas to a data URL
                var imageData = canvas.toDataURL('image/png');

                // Create a download link and trigger the download
                var a = document.createElement('a');
                a.href = imageData;
                a.download = 'report.png';
                document.body.appendChild(a);
                a.click();
                document.body.removeChild(a);
            });
        });
    </script>

    <script>
        var ctxTotal = document.getElementById('totalChart').getContext('2d');
        var totalChart = new Chart(ctxTotal, {
            type: 'bar',
            data: {
                labels: ['Books', 'Orders', 'Users'],
                datasets: [{
                    label: 'Total Records',
                    data: [@ViewBag.TotalBooks, @ViewBag.TotalOrders, @ViewBag.TotalUsers],
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.2)',
                        'rgba(54, 162, 235, 0.2)',
                        'rgba(255, 206, 86, 0.2)'
                    ],
                    borderColor: [
                        'rgba(255, 99, 132, 1)',
                        'rgba(54, 162, 235, 1)',
                        'rgba(255, 206, 86, 1)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });

        var ctxLine = document.getElementById('lineChart').getContext('2d');
        var lineChart = new Chart(ctxLine, {
            type: 'line',
            data: {
                labels: ['January', 'February', 'March', 'April', 'May', 'June', 'July'],
                datasets: [{
                    label: 'Revenue',
                    data: [100, 200, 300, 400, 500, 600, 700], // Sample revenue data for each month
                    borderColor: 'rgba(75, 192, 192, 1)',
                    backgroundColor: 'rgba(75, 192, 192, 0.2)',
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
 </script>

}
