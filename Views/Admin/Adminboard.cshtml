@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container mt-5">
    <h1>Welcome to Admin Dashboard</h1>

    <div class="row mt-4">
        <!-- Manage Books Card -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Manage Books</h5>
                    <p class="card-text">Manage books, add new books, and edit existing books.</p>
                    <a href="#" class="btn btn-primary">Add Book</a>
                    <a href="#" class="btn btn-secondary">Manage Books</a>
                </div>
            </div>
        </div>

        <!-- Payment Card -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Payment</h5>
                    <p class="card-text">View and manage payment transactions.</p>
                    <a href="#" class="btn btn-primary">View Payments</a>
                </div>
            </div>
        </div>

        <!-- Manage Orders Card -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Manage Orders</h5>
                    <p class="card-text">View and manage customer orders.</p>
                    <a href="#" class="btn btn-primary">View Orders</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <!-- Manage User Accounts Card -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Manage User Accounts</h5>
                    <p class="card-text">Manage user accounts and permissions.</p>
                    <a href="#" class="btn btn-primary">View Users</a>
                </div>
            </div>
        </div>

        <!-- Generate Report Card -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Generate Report</h5>
                    <p class="card-text">Generate and view sales reports.</p>
                    <a href="#" class="btn btn-primary">Generate Report</a>
                </div>
            </div>
        </div>
    </div>
</div>
